<% if flash[:notice].nil? %>
  $('#answr_<%= @answer.id %>').empty();
  $('#answr_<%= @answer.id %>').replaceWith('<%= j render @answer %>');
<% else %>
  $('#answr_<%= @answer.id %>').append('<%= j render partial: "questions/flash_notice", locals: { alert_text: flash[:notice]} %>');
  <% flash.clear() %>
<% end %>
